<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.yuan.redis.dao.StockOrderDao">
	
	<resultMap id="StockOrderResultMap" type="com.yuan.redis.entity.StockOrder">
		<id property="id" column="id"  />
		<result property="sid" column="sid" />
		<result property="name" column="name" />
		<result property="createTime" column="create_time" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 id ,sid ,name ,create_time 
	</sql>
	
	<sql id="base_value_column">
		 #{id},#{sid},#{name},#{createTime}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
       <if test="ids != null  and ids.size > 0  ">
			AND ID IN
			<foreach item="id" index="index" collection="ids" open="("
				separator="," close=")">
				#{id}
			</foreach>
		</if>

		<if test="id != null ">
			AND id = #{id,jdbcType=INTEGER}
		</if>

	    	<!-- 大于等于id -->
		<if test="filter_ids != null">
			AND id<![CDATA[>=]]>#{filter_ids}
		</if>
		<!-- 小于等于id -->
	    <if test="filter_ide!= null">
			AND id<![CDATA[<=]]>#{filter_ide}
		</if>


		<if test="sid != null ">
			AND sid = #{sid,jdbcType=INTEGER}
		</if>

	    	<!-- 大于等于sid -->
		<if test="filter_sids != null">
			AND sid<![CDATA[>=]]>#{filter_sids}
		</if>
		<!-- 小于等于sid -->
	    <if test="filter_side!= null">
			AND sid<![CDATA[<=]]>#{filter_side}
		</if>


		<if test="name != null ">
			AND name = #{name,jdbcType=VARCHAR}
		</if>
	   <if test="namelike != null ">
			AND name like CONCAT('%',#{namelike},'%')
		</if>



		<if test="createTime != null ">
			AND create_time = #{createTime,jdbcType=VARCHAR}
		</if>
	   <if test="createTimelike != null ">
			AND create_time like CONCAT('%',#{createTimelike},'%')
		</if>



	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="id != null ">
			id = #{id,jdbcType=INTEGER},
		</if>
		<if test="sid != null ">
			sid = #{sid,jdbcType=INTEGER},
		</if>
		<if test="name != null ">
			name = #{name,jdbcType=VARCHAR},
		</if>
		<if test="createTime != null ">
			create_time = #{createTime,jdbcType=VARCHAR},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="StockOrderResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_STOCK_ORDER
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="StockOrderResultMap">
		SELECT	<include refid="base_column" />
		FROM	T_STOCK_ORDER
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="long">
		SELECT COUNT(*) FROM T_STOCK_ORDER
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.yuan.redis.entity.StockOrder">
		<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">  
	          SELECT LAST_INSERT_ID() AS ID    
	    </selectKey>  
		INSERT T_STOCK_ORDER 
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="com.yuan.redis.entity.StockOrder">
		UPDATE	T_STOCK_ORDER
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM T_STOCK_ORDER
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM T_STOCK_ORDER
		WHERE	ID	IN
    	<foreach item="StockOrderId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{StockOrderId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="StockOrderResultMap">
		SELECT	<include refid="base_column" />
		FROM 	T_STOCK_ORDER
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="StockOrderResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_STOCK_ORDER
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>

       <!-- 分页查询-->
       <select id="findListByPage" resultMap="StockOrderResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_STOCK_ORDER
		<where> 1=1
			<include refid="where_column" />
		</where>
					
	     <if test="order != null and order != ''">
		order by  ${order}
	     </if>
	     
		<if test="pageNumber != null  and pageSize !=null ">
			limit  #{pageNumber,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
	     </if>
			
		
	</select>
	
	
		<!-- 删除多条记录-->
	<delete id="deletes">
		DELETE	FROM T_STOCK_ORDER
		<where> 
			<include refid="where_column" />
		</where>
	</delete>
	
 <!-- 新分页查询-->
       <select id="findListNewByPage" resultMap="StockOrderResultMap">
		SELECT
		<include refid="base_column" />
		FROM T_STOCK_ORDER
		<where> 1=1
			<include refid="where_column" />
		</where>
					
	     <if test="order != null and order != ''">
		order by  ${order}
	     </if>
	     
		<if test="pageNumber != null  and pageSize !=null ">
			limit  #{pageNumber,jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
	     </if>
			
		
	</select>
	
</mapper>